<%- include("../partials/header")%>
<div class="container">
	<div class="jumbotron">
		<div class="container">
		<h1><i class="fas fa-campground"></i> Popular Camping Grounds</h1>
		<p>These are the some of the best camping sites around the world.</p>
		<p><a class="btn btn-primary btn-lg" href="/camping/new" role="button">Add new campgrounds</a></p>
		</div>
	</div>
	
	<div class="row text-center" style="display:flex ; flex-wrap:wrap">
		<% camps.forEach(function(camp){ %> 
			<div class="col-md-3 col-sm-12">
				<div class="thumbnail">
					<img src="<%= camp.image%>" height="500" width="700">
					<div class="caption">
						<h4><%= camp.Campname%></h4>
					</div>
					<p>
						<a href="/campground/<%= camp._id %>" class="btn btn-primary">More info</a>
					</p>
				</div>
			</div>
		<% }) %>
	</div>
	
</div>
<%- include("../partials/footer")%>
